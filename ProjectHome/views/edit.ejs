<% include ./partials/header %>
<div class="row">
  <div style="width: 30%; margin: 25px auto;">
    <form action="/<%=user._id%>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="lastName">Фамилия:</label>
        <input id="lastName" class="form-control" type="text" name="lastName" value="<%= user.lastName %>" />
      </div>
      <div class="form-group">
        <label for="firstName">Имя:</label>
        <input id="firstName" class="form-control" type="text" name="firstName" value="<%= user.firstName %>" />
      </div>
      <div class="form-group">
        <label for="middleName">Отчество:</label>
        <input id="middleName" class="form-control" type="text" name="middleName" value="<%= user.middleName %>" />
      </div>
      <div class="form-group">
        <button class="btn btn-md btn-success">Сохранить</button>
        <a href="/" class="btn btn-md btn-info">Отменить</a>
      </div>
    </form>
  </div>
</div>

<div class="container" style="margin-top: 20px">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">№</th>
        <th scope="col">Название</th>
        <th scope="col">Стоимость</th>
      </tr>
    </thead>
    <tbody>
      <% user.items.forEach(function(item, index){ %>
      <tr ondblclick="openLink('<%=user._id%>/edit')" oncontextmenu="deletePage('<%=user._id%>/delete');return false;"">
          <th scope=" row"><%= index+1 %></th>
        <td><%= item.nameOfProduct %></td>
        <td id="price"><%= item.priceOfProduct %></td>
      </tr>
      <% }) %>
      <tr>
        <th scope=" row"></th>
        <td>Итого:</td>
        <td> <%= user.overAllCost %></td>
      </tr>
    </tbody>
  </table>
</div>

<div class="row">
  <div style="width: 30%; margin: 25px auto;">
    <form action="/<%=user._id%>" method="POST">
      <div class="form-row">
        <div class="form-group col-md-8">
          <label for="inputProduct">Название продукта:</label>
          <input type="text" class="form-control" id="inputProduct" name="items[nameOfProduct]">
        </div>
        <div class="form-group col-md-4">
          <label for="inputPrice">Цена:</label>
          <input type="text" class="form-control" id="inputPrice" name="items[priceOfProduct]">
        </div>
      </div>
      <div class="form-group">
        <button class="btn btn-md btn-success">Добавить</button>
        <a href="/" class="btn btn-md btn-info">Отменить</a>
      </div>
    </form>
  </div>
</div>
<% include ./partials/footer %>