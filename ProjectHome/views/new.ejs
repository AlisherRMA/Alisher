<% include ./partials/header %>
<div class="row">
  <div style="width: 30%; margin: 25px auto;">
    <form action="/" method="POST">
      <div class="form-group">
        <label for="lastName">Фамилия:</label>
        <input id="lastName" class="form-control" type="text" name="lastName" />
      </div>
      <div class="form-group">
        <label for="firstName">Имя:</label>
        <input id="firstName" class="form-control" type="text" name="firstName" />
      </div>
      <div class="form-group">
        <label for="middleName">Отчество:</label>
        <input id="middleName" class="form-control" type="text" name="middleName" />
      </div>
      <div class="form-group">
        <label for="quentity">Количество:</label>
        <input id="quentity" class="form-control" type="number" name="quentity" />
      </div>
      <div class="form-group">
        <label for="overAllCost">Общая цена:</label>
        <input id="overAllCost" class="form-control" type="number" name="overAllCost" />
      </div>
      <div class="form-row">
        <div class="form-group col-md-8">
          <label for="inputProduct">Название продукта:</label>
          <input type="text" class="form-control" id="inputProduct" name="nameOfProduct">
        </div>
        <div class="form-group col-md-4">
          <label for="inputPrice">Цена:</label>
          <input type="number" class="form-control" id="inputPrice" name="priceOfProduct">
        </div>
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Добавить</button>
      </div>

    </form>

  </div>
  <a href="/">Назад</a>
</div>
<% include ./partials/footer %>